{
  "manifest_version": 3,
  "name": "AI Email Reply Generator",
  "version": "1.0.0",
  "description": "Generate professional email replies using AI powered by Groq",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "http://localhost:8082/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Email Reply Generator"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
